    </test>

    <test name="E2E Tests for graphql api">
        <classes>
            <class name="com.TestDefinitionLayer.TC004_GraphQLTest"/>
        </classes>
    </test>


    <test name="E2E Tests for GRPC Api">
        <classes>
            <class name="com.TestDefinitionLayer.TC009_GrpcApi"/>

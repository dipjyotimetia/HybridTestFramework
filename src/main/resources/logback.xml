<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the root level to WARN to ignore INFO and DEBUG logs -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Optionally, you can set specific loggers to a different level -->
    <logger name="com.microsoft.playwright" level="ERROR" />
</configuration>